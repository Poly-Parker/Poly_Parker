<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/map"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/parkingmap"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="60"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/congested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Least Congested"
                android:layout_centerHorizontal="true"
                android:textColor="#2DC234" />

            <ListView
                android:id="@+id/congested_list_view"
                android:layout_below="@+id/congested"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:layout_centerHorizontal="true"
                android:textColor="#2DC234" />

            <ListView
                android:id="@+id/recent_listView"
                android:layout_below="@id/recent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></ListView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>